<div class="wrap">
  <div class="header">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <h1 class="logo">
          <span class="logo-title">ShareDrop</span>
          <span class="logo-subtitle">P2P file transfer</span>
          <img src="/images/sharedrop.svg">
        </h1>

      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          {{#if you.email}}
            <li>
              <span class="navbar-text signed-in">{{you.email}}</span>
            </li>
            <li>
              <a href="javascript:void(0)" class="sign-out" {{action 'signOut'}}>
                <img src="/images/persona.svg">
                Sign out
              </a>
            </li>
          {{else}}
            <li>
              <a href="javascript:void(0)" class="sign-in" {{action 'signIn'}}>
                <img src="/images/persona.svg">
                Sign in
              </a>
            </li>
          {{/if}}
        </ul>
      </div>
    </nav>
  </header>

  {{outlet}}

  <div class="footer">
    <div class="cowbell-labs">
      Made by
      <a href="https://cowbell-labs.com/" target="_blank">
        <span>Cowbell Labs</span>
        <img src="/images/cowbell-labs.svg">
      </a>
    </div>

    <p class="about">{{outlet about_you}}</p>

    <a href="https://github.com/cowbell/sharedrop" class="github" target="_blank">
      <img src="/images/github.svg">
    </a>
  </div>
</div>
